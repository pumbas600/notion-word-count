{
  "manifest_version": 2,
  "name": "Notion Word Count",
  "version": "1.0.0",
  "description": "Adds a word count label to notion pages.",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*"
      ],
      "js": [
        "content/wordCounter.js"
      ],
      "css": [
        "content/wordCounter.css"
      ]
    }
  ]
}