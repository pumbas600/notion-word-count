{
  "name": "notion-word-count",
  "version": "0.0.1",
  "description": "Display the word count in a notion page",
  "scripts": {
    "build:chrome": "node scripts/build.js --chromium && webpack",
    "build:firefox": "node scripts/build.js --firefox && webpack",
    "dev:chrome": "node scripts/build.js --chromium && webpack --watch",
    "dev:firefox": "node scripts/build.js --firefox && webpack --watch",
    "prerelease": "node scripts/build.js --build && scripts/build.js --version",
    "release": "webpack",
    "postrelease": "node scripts/build.js --release",
    "release:patch": "npm version patch --git-tag-version false",
    "release:minor": "npm version minor --git-tag-version false",
    "release:major": "npm version major --git-tag-version false",
    "postversion": "npm run release && npm run push",
    "push": "node scripts/build.js --push"
  },
  "author": "pumbas600",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.2.6",
    "css-loader": "^6.8.1",
    "jszip": "^3.10.1",
    "mini-css-extract-plugin": "^2.7.6",
    "node": "^20.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  }
}
